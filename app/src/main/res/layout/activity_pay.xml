<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#eeedf0" >
    <include
        layout="@layout/include_header"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeedf0">
            <TextView
                android:id="@+id/pay_title"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textColor="@color/main_textcolor"
                android:textSize="13sp"
                android:text="dsadsa"
                android:layout_height="50dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_height="60dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/viewcolor"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/black"
                    android:text="购买份数"/>
                <TextView
                    android:id="@+id/paynum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/main_textcolor"
                    android:text="1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/viewcolor"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"

                android:background="@color/white"
                android:layout_height="60dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/black"
                    android:text="合计"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/viewcolor"
                    android:layout_alignParentBottom="true"/>

                <TextView
                    android:id="@+id/payprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88元"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/black"/>



            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:singleLine="true"
                android:gravity="bottom"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:textColor="@color/main_textcolor"
                android:textSize="13sp"
                android:text="选择支付方式"
                android:layout_height="50dp" />
            <RelativeLayout
                android:layout_width="match_parent"
               android:id="@+id/rela_zhifubao"
                android:background="@color/white"
                android:layout_height="60dp">
                <ImageView
                    android:id="@+id/iv_zhifubao"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/black"
                    android:src="@drawable/zhifubaopay"
                    android:text="合计"/>
                <LinearLayout
                    android:layout_toRightOf="@+id/iv_zhifubao"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="支付宝支付"/>
   <TextView
       android:textSize="13sp"
       android:textColor="@color/main_textcolor"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="限额20000"/>



                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/viewcolor"
                    android:layout_alignParentBottom="true"/>

                <ImageView
                    android:id="@+id/right_zhifubao"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    android:src="@drawable/rightiv"/>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rela_weixin"
                android:background="@color/white"
                android:layout_height="60dp">
                <ImageView
                    android:id="@+id/iv_weixin"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/black"
                    android:src="@drawable/weixinpay"
                    android:text="合计"/>
                <LinearLayout
                    android:layout_toRightOf="@+id/iv_weixin"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="微信支付"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="@color/main_textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限额8000"/>



                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/viewcolor"
                    android:layout_alignParentBottom="true"/>

                <ImageView
                    android:id="@+id/right_weixin"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    android:src="@drawable/rightiv"/>



            </RelativeLayout>





        </LinearLayout>
    </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="@drawable/main_color_selector"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/payedit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                />
            <TextView
               android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="确认"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>

