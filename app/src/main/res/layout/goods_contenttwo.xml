<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:focusable="true"
    android:background="#eeedf0"
     >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@android:color/background_light" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_alignParentTop="true" >


            <TextView
                android:text="推荐理由"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:lines="2"
                android:textColor="@color/bg_Black"
                android:textSize="18sp" />





        </RelativeLayout>
        <LinearLayout
            android:id="@+id/text_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/protitle"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>
        <Button
            android:layout_width="80dp"
            android:layout_gravity="center"
            android:text="查看推荐"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_border_color_whitenoradio"
            android:layout_height="40dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/viewcolor"/>


        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_alignParentTop="true" >


            <TextView
                android:text="菜单"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:lines="2"
                android:textColor="@color/bg_Black"
                android:textSize="18sp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/menu_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/protitle"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_alignParentTop="true" >


            <TextView
                android:text="温馨提示"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/xinpress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:lines="2"
                android:textColor="@color/bg_Black"
                android:textSize="18sp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/tell_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/protitle"
            android:gravity="center"
            android:orientation="vertical">
    </LinearLayout>
    </LinearLayout>






        







       

</LinearLayout>
